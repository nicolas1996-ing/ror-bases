<%= form_with model: @product do |form|%>
  <%# errors form %>
  <% @product.errors.full_messages.each do |error|  %>
    <%= error%>
    <br>
  <%end%>
  <%# inputs form %>
  <div>
    <%# input 1 %>
    <%= form.label :title%>
    <%= form.text_field :title%>
  </div>
  <br>
  <div>
    <%# input 2 %>
    <%= form.label :description%>
    <%= form.text_field :description%>
  </div>
  <br>
  <div>
    <%# input 3 %>
    <%= form.label :price%>
    <%= form.number_field :price%>
  </div>

 <div>
    <%# input 3 %>
    <%= form.label :category %>
    <%#  param: category_id - :id valor enviado del modelo de category - :name valor del modelo que se le muestra al usuario%>
    <%= form.collection_select :category_id, Category.all.order(name: :asc), :id, :name  %>
  </div>

  <%# 
    para subir imagenes a la base de datos
    has_one_attached :photo
    active_storage
  %>
   <div>
      <%= form.label :photo %>
      <%= form.file_field :photo%>
    </div>
  <br>
  <%# btn submit %>
  <%= form.submit%>
<% end %>